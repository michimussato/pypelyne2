<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
    <mime-type type="image/x-cin">
        <comment>Kodak Cineon image file format</comment>
        <glob pattern="*.cin"/>
    </mime-type>
    <mime-type type="image/x-dpx">
        <comment>SMPTE Digital Picture Exchange (DPX) image file format</comment>
        <glob pattern="*.dpx"/>
    </mime-type>
    <mime-type type="image/x-iff">
        <comment>Generic Interchange File Format (IFF)</comment>
        <glob pattern="*.iff"/>
        <glob pattern="*.z"/>
    </mime-type>
    <mime-type type="image/x-ifl">
        <comment>Autodesk Image File List (IFL) format</comment>
        <glob pattern="*.ifl"/>
    </mime-type>
    <mime-type type="image/x-jpeg">
        <comment>Joint Photographic Experts Group (JPEG) image file format</comment>
        <glob pattern="*.jpeg"/>
        <glob pattern="*.jpg"/>
        <glob pattern="*.jfif"/>
    </mime-type>
    <mime-type type="image/x-lut">
        <comment>Inferno lookup table file format</comment>
        <glob pattern="*.lut"/>
    </mime-type>    
    <mime-type type="image/x-1dl">
        <comment>Kodak lookup table file format</comment>
        <glob pattern="*.1dl"/>
    </mime-type>
    <mime-type type="image/x-exr">
        <comment>Industrial Light and Magic OpenEXR image file format</comment>
        <glob pattern="*.exr"/>
    </mime-type>
    <mime-type type="image/x-pic">
        <comment>Softimage image file format</comment>
        <glob pattern="*.pic"/>
    </mime-type>
    <mime-type type="image/x-png">
        <comment>Portable Network Graphics (PNG) image file format</comment>
        <glob pattern="*.png"/>
    </mime-type>
    <mime-type type="image/x-pbm">
        <comment>NetPBM image file format</comment>
        <glob pattern="*.ppm"/>
        <glob pattern="*.pnm"/>
        <glob pattern="*.pgm"/>
        <glob pattern="*.pbm"/>
    </mime-type>
    <mime-type type="image/x-rla">
        <comment>Wavefront RLA image file format</comment>
        <glob pattern="*.rla"/>
        <glob pattern="*.rpf"/>
    </mime-type>
    <mime-type type="image/x-sgi">
        <comment>Silicon Graphics image file format</comment>
        <glob pattern="*.sgi"/>
        <glob pattern="*.rgba"/>
        <glob pattern="*.rgb"/>
        <glob pattern="*.bw"/>
    </mime-type>
    <mime-type type="image/x-tga">
        <comment>Targa image file format</comment>
        <glob pattern="*.tga"/>
    </mime-type>
    <mime-type type="image/x-tiff">
        <comment>Tagged Image File Format (TIFF)</comment>
        <glob pattern="*.tiff"/>
        <glob pattern="*.tif"/>
    </mime-type>
</mime-info>

